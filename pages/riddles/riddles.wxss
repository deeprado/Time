/* pages/riddles/riddles.wxss */
/* 隐藏滚动条  */

::-webkit-scrollbar {
  width: 5px;
  height: 0;
  color: transparent;
}

/* 设置页面的背景颜色  */

page {
  background-color: #eee;
}

.item {
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  align-items: center;
  background-color: white;
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 10px;
  border-radius: 5px;
}

.title {
  display: flex;
  color: #38373c;
  margin-top: 10px;
  font-size: 13pt;
}

.content {
  display: flex;
  margin: 7px;
  color: #666;
  font-size: 11pt;
}
