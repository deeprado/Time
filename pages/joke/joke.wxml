<!--pages/joke/joke.wxml-->

<view wx:for="{{array}}" wx:key="index">
  <!-- class 引用样式  -->
  <view class='item' bindtap='copy' data-item='{{item}}'>
    <text class='title'>{{item.title}}</text>
    <!-- 开头添加两个空格 展示html 富文本内容  -->
    <rich-text class='content' nodes="{{'　　'+item.text}}" />
  </view>
</view>